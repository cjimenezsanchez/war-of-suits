<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ViewAnimator
        android:id="@+id/card_animator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/top_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/small_margin"
                tools:src="@drawable/ic_hearts" />

            <TextView
                android:id="@+id/card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/extra_large_text_size"
                tools:text="Q" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bottom_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/small_margin"
                tools:src="@drawable/ic_hearts" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/card_place_holder_icon"
            android:layout_width="@dimen/large_icon"
            android:layout_height="@dimen/large_icon"
            android:layout_gravity="center"
            android:contentDescription="@string/place_holder_icon"
            app:tint="@color/grey" />

    </ViewAnimator>

</merge>